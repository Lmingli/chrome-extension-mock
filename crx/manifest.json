{
  "manifest_version": 2,
  "name": "mock",
  "version": "1.0.0",
  "description": "mock",
  "icons": {
    "16": "assets/yaoming.png",
    "48": "assets/yaoming.png",
    "128": "assets/yaoming.png"
  },
  // 会一直常驻的后台JS或后台页面
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  // 浏览器右上角图标设置，browser_action、page_action、app必须三选一
  "browser_action": {
    "default_icon": "assets/yaoming.png",
    // 图标悬停时的标题，可选
    "default_title": "mock",
    "default_popup": "index.html#/popup"
  },
  // 需要直接注入页面的JS
  "content_scripts": [
    {
      //"matches": ["http://*/*", "https://*/*"],
      // "<all_urls>" 表示匹配所有地址
      "matches": ["<all_urls>"],
      // 多个JS按顺序注入
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest", // web请求
    "webRequestBlocking",
    "storage", // 插件本地存储
    "downloads",
    // "http://127.0.0.1/*", // 可以通过executeScript或者insertCSS访问的网站
    // "https://127.0.0.1/*" // 可以通过executeScript或者insertCSS访问的网站
    "<all_urls>"
  ],
  // 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
  "web_accessible_resources": ["inject.js"],
  "options_ui": {
    "page": "index.html#/options"
    // 添加一些默认的样式，推荐使用
    // "chrome_style": true
  },
  "devtools_page": "devtools.html"
  // 插件主页
  // "homepage_url": "https://www.baidu.com"
}
